<resources >

    <!-- Base dark theme for HealthMate -->
    <style name="Base.Theme.HealthMate" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/md_theme_dark_secondary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>

        <!-- Surface & Background -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>

        <!-- Outlines & Shadows -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="android:shadowColor">@color/md_theme_dark_shadow</item>

        <!-- Error & Warning -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorSecondary">@color/md_theme_dark_warning</item>

        <!-- Tertiary (accent colors like mood or hydration) -->
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>

        <!-- Status bar & navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Tooling -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
